rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the path
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Allow users to upload profile pictures
    match /profile-pictures/{userId}/{fileName} {
      allow read: if true; // Profile pics are public
      allow write: if isOwner(userId) && request.resource.size < 5 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }

    // Allow users to upload post media (images/videos)
    match /posts/{userId}/{fileName} {
      allow read: if true; // Posts are public
      allow write: if isOwner(userId) && request.resource.size < 50 * 1024 * 1024; // Limit to 50MB
    }
    
    // Default catch-all: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
